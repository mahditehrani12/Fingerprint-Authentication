<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.mahdi.fingerprintauthentication.MainActivity">

    <ImageView
        android:id="@+id/done"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:src="@drawable/done"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/home_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_home_desc"
        android:layout_centerVertical="true"
        android:layout_below="@id/done"
        android:layout_marginTop="25dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="12dp" android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp" android:layout_marginStart="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_desc"
        android:layout_marginTop="36dp"
        android:text="@string/activity_home_note"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="12dp" android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp" android:layout_marginStart="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:text="@string/github"/>

</RelativeLayout>